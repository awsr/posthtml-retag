{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "target": "ES2022",
        "declaration": true,
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "esModuleInterop": true,
        "outDir": "lib"
    },
    "include": ["./src"],
    "exclude": ["node_modules", "**/node_modules/*"]
}
